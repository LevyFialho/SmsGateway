@model SmsGateway.Application.CoreContext.DTO.SMSModule.AdministradorDTO


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <h2>@Messages.website_Admin </h2>
    <fieldset>
        <legend>@Messages.website_Create</legend>
        <div class="editor-label">
           @Messages.website_Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
         @Messages.website_Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Senha)
            @Html.ValidationMessageFor(model => model.Senha)
        </div>

        <div class="editor-label">
        @Messages.website_Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
          
      

         
    </fieldset>
 
     <input type="submit" value="@Messages.website_Submit" />
            @ViewBag.ErrorMsg
}

<div>
    @Html.ActionLink(@Messages.website_Back, "Index")
</div>
