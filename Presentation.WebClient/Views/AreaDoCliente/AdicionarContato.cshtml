@model SmsGateway.Presentation.WebClient.Models.AdicionarContatoModel


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 

<fieldset>
    <legend>@Messages.ContatosForaDaLista</legend>
    @if (Model.ContatosForaDaLista != null && Model.ContatosForaDaLista.Count(c => c.IsEnabled) > 0)
    {
        <table>
            <tr>
                <th>
                    @Messages.Nome
                </th>
                <th>
                    @Messages.Numero
                </th>
                <th></th>
                 
            </tr>
            @foreach (var item in Model.ContatosForaDaLista.Where(c => c.IsEnabled))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.ActionLink(@Messages.AdicionarContato, "AddContato", new { idContato = item.Id, idLista = Model.ListaId })
                    </td>
                    
                </tr>
            }
        </table>
    }
     
</fieldset>
<div>
    @Html.ActionLink(@Messages.website_Back, "SalvarLista", new {id = Model.ListaId})
</div>
