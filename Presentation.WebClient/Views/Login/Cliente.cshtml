@model SmsGateway.Presentation.WebClient.Models.LoginModel
@{
    
    Layout = "~/Views/Shared/_Login.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

 

@using (Html.BeginForm())
{
    <h2>@Messages.website_Login</h2>
    <div>
        <fieldset>
            <div class="editor-label">
               @Messages.website_Email
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="editor-label">
               @Messages.website_Password
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Senha)
                @Html.ValidationMessageFor(m => m.Senha)
            </div>

            <p>
                <input type="submit" value="@Messages.website_Login" />
                
        @Html.ActionLink(@Messages.NovoCadastro, "Create", "SolicitacoesDeCadastro")
        
        @Html.ActionLink(@Messages.RecuperarSenha, "RecuperarSenha", "SolicitacoesDeCadastro")
                @ViewBag.LogInMsg
            </p>
        </fieldset>
    </div>
}