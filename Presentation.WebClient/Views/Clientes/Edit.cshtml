@model SmsGateway.Application.CoreContext.DTO.SMSModule.ClienteDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Messages.website_Cliente</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
     @Html.HiddenFor(model => model.Id)
      @Html.HiddenFor(model => model.ContratoAtualId)
     
   <fieldset>
    <legend>@Messages.website_Edit</legend>

    <div class="display-label">@Messages.website_Name</div>
    <div class="display-field">
        @Html.EditorFor(model => model.Nome)
    </div>
    <div class="display-label">@Messages.website_Password</div>
    <div class="display-field">
        @Html.EditorFor(model => model.Senha)
    </div>
   <div class="editor-label">
            @Html.LabelFor(model => model.IsEnabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsEnabled)
            @Html.ValidationMessageFor(model => model.IsEnabled)
        </div>
   
</fieldset>

    <input type="submit" value="@Messages.website_Submit" />
}

<div>
  @Html.ActionLink(@Messages.website_Back, "Index")
    @(Model.IsEnabled ? Html.ActionLink(@Messages.website_Desativar, "Inativar", new {id = Model.Id}) : Html.ActionLink(@Messages.website_Ativar, "Ativar", new {id = Model.Id}))
</div>
